pipeline {
  agent any
  options {
    timeout(time: 1, unit: 'HOURS')
    parallelsAlwaysFailFast()
  }
  stages {
    stage('Clean') { steps { sh 'git clean -ffdx && make clean' } }
    stage('Build/Test') {
      parallel {
        stage('Test') {
          steps {
            sh 'make testcover'
            cobertura coberturaReportFile: 'coverage.xml', failUnhealthy: false, failUnstable: false, maxNumberOfBuilds: 0, onlyStable: false, sourceEncoding: 'ASCII', zoomCoverageChart: false
          }
        }
        stage('Lint') {
          steps {
            sh '(pylint --rcfile=.pylintrc lineage > pylint.log || echo "pylint exited with $?")'
            recordIssues(tools: [pyLint(pattern: 'pylint.log')])
          }
        }
        stage('Doc') {
          steps {
            sh 'make docs'
            publishHTML([allowMissing: false, alwaysLinkToLastBuild: false, keepAll: false, reportDir: 'doc/build', reportFiles: 'index.html', reportName: 'Sphinx Docs'])
          }
        }
        stage('Build') {
          steps {
            sh 'make manuscript/manuscript.pdf -j 8'
            archiveArtifacts artifacts: 'manuscript/manuscript.pdf, manuscript/figures/*.pdf', onlyIfSuccessful: true
          }
        }
      }
    }
  }
  post {
    always {
      junit allowEmptyResults: true, testResults: 'junit.xml'
    }
  }
}
